
#vbell on
autodetach on  #should be default
startup_message off

#remove some stupid / dangerous key bindings
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
#make them better
#bind '\\' quit
bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history

#-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-
#escape ``
vbell off
defwrap on
defflow auto

#hardstatus string "[screen %H %n%?: %t%?] %h"
hardstatus string "[screen %H %n:%t] %h"

#multiuser on
defscrollback 16384

#256 colors
# allow bold colors - necessary for some reason
#attrcolor b ".I" 
# tell screen how to set colors. AB = background, AF=foreground 
termcapinfo xterm|xterm-256color 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' 
# erase background with current bg color 
defbce "on"

term screen-256color
#term xterm-256color
#term rxvt-256color

#allow use of scrollback in Putty
termcapinfo xterm* ti@:te@
#termcapinfo screen-256color ti@:te@

termcapinfo  xterm|xterm-256color Z0=\E[?3h:Z1=\E[?3l:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l
